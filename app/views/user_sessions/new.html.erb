<h1> Login </h1>
<%= form_for @user_session, :url => {:action => "create"} do |f| %>
  <% if @user_session.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_session.errors.count, "error") %> prohibited this user from being accesed:</h2>
       <ul>
      <% @user_session.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>   
    </div> 
  <% end %> 
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  <div>
    <%= f.submit "Login" %>
  </div>
<% end %>
